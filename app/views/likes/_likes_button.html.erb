<% if post_image.liked_by?(current_user) %>
    <%= link_to  post_image_likes_path(post_image.id), method: :delete  do %>
      <i class="fas fa-heart fa-2x m-2"></i><%= post_image.likes.count %>
    <% end %>
<% else %>
    <%= link_to post_image_likes_path(post_image.id), method: :post do %>
      <i class="fas fa-heart fa-2x m-2"></i><%= post_image.likes.count %>
    <% end %>
<% end %>
