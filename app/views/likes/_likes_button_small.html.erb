<% if post_image.liked_by?(current_user) %>
    <%= link_to  post_image_likes_path(post_image.id), method: :delete,remote: true  do %>
      <i class="fas fa-heart", style="color:Tomato"></i>
    <% end %>
<% else %>
    <%= link_to post_image_likes_path(post_image.id), method: :post ,remote: true  do %>
      <i class="fas fa-heart "></i>
    <% end %>
<% end %>