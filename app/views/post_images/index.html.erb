

<div class="container">
  <div class="list">
  <% @post_images.each do |post_image|%>
  <div class="card1 shadow-lg sango_shadow sango_shadow:hover ">
  <%= link_to post_image_path(post_image.id) do %>
    <%= image_tag post_image.get_image , class:"card-img-top"; %>
  <% end %>
  <div class="card-body2">
    <div class="row">
      <!--<div class="col-2">-->
      <!--</div>-->
      <div class="col">
        <table>
          <tr>
            <td><%= render 'likes/likes_botton',post_image: post_image%></td>

          </tr>
        </table>

        <p class="card-title">
          <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
            <strong><i class="far fa-flag"></i><span> <%= post_image.place %><%=render 'post_image_star',post_image: post_image%></span></strong>
          <% end %>
        </p>
        <td><%= render 'tasks/task_botton',task: @task ,post_image: post_image%></td>
        <p class="card-text">説明：<%= post_image.introduction %></p>
        <span><i class="fas fa-user"></i> By <%= post_image.user.nickname %> ｜ </span>
        <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
      </div>
    </div>
  </div>
</div>
      <% end %>
    </div>
  </div>
