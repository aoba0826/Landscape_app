<div class="container">
  <div class="row">

    <div class="col d-flex justify-content-center">

              <%= form_with model:@post_image,url:post_images_path,method: :post, local:true do |f| %>
               <%= render 'layouts/error_message', model: f.object %>
              <div class="field ">
                <%= f.label :"タイトル" %><br/>
                <%= f.text_field :title ,autofocus: true ,autocomplete: "title",class:"form-control" %><br/>
              </div>

              <div class="field">
                <%= f.label :"場所" %><br/>
                <%= f.text_field :place , autocomplete: "place",class:"form-control" %><br/>
              </div>

              <div class="field ">
                <%= f.label :"説明" %><br/>
                <%= f.text_area :introduction , autocomplete: "introduction",class:"form-control" %><br/>
              </div>


              <div class="form-group row " id="star">
                <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
                <%= f.hidden_field :star, id: :review_star %>
              </div>

                          <!-- 評価javascript -->
              <script>
              $('#star').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',

                scoreName: 'post_image[star]',
                half: false,
              });
              </script>

              <div class="field ">
                <%= f.label :"画像" %>
                <%= f.file_field :image,accept: "image/*" %><br/>
              </div>

                <div class="d-flex justify-content-center">
                  <%= f.submit '投稿',class:"btn btn-primary rounded-pill m-3 " %>
                </div>


              <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
