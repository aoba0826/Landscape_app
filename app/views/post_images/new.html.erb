<div class="container">
  <div class="row">
    <div class="col">
      <table>
        <tr>
          <td>welcome<strong><%= @user.nickname %></strong></td>
     
          <td>
              <%= form_with model:@post_image,url:post_images_path,method: :post, local:true do |f| %>
              <div>
                <%= f.label :"タイトル" %><br/>
                <%= f.text_field :title ,autofocus: true ,autocomplete: "title" %><br/>
              </div>

              <div>
                <%= f.label :"場所" %><br/>
                <%= f.text_field :place , autocomplete: "place" %><br/>
              </div>

              <div>
                <%= f.label :"説明" %><br/>
                <%= f.text_area :introduction , autocomplete: "introduction" %><br/>
              </div>

           
              <div class="form-group row" id="star">
                <%= f.label :star,'評価 ', class:'col-md-3 col-form-label' %>
                <%= f.hidden_field :star, id: :review_star %>
              </div>

                          <!-- 評価javascript -->
              <script>
              $('#star').raty({
                size     : 36,
                starOff:  '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',

                scoreName: 'post_image[star]',
                half: false,
              });
              </script>

              <div>
                <%= f.label :"画像" %><br/>
                <%= f.file_field :image,accept: "image/*" %><br/>
              </div>


                <%= f.submit '投稿' %>

              <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
