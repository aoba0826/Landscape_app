<div class="container">
  <div class="row">
    <div class="col"><%= image_tag @task.post_image.image, size: "500x500" %></div>
    <div class="col">
      <%= form_with model:@task,url:task_path,method: :put,local:true do |f| %>
      <%= f.label :"タスク" %><br>
      <%= f.text_field :title_task,autofocus: true, autocomplete: "title_task" %><br>
      
      <%= f.label :"place" %><br>
      <%= f.text_field :task_place,autocomplete: "task_place" %><br>
      
      <%= f.label :"content" %><br>
      <%= f.text_area :content, rows: '5' %><br>
      
      <%= f.submit '投稿' %>
      
      <% end %>
    </div>
  </div>
</div>