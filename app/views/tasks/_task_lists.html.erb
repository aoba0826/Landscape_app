<% tasks.each do |task|%>
  <div class="card  mx-auto mb-3 border shadow-lg d-flex justify-content-center w-75  ">
    <div class="row g-0 ">
      <%= form_with model:@task,url:tasks_path,method: :post,local:true do |f|%>
          <%= render 'layouts/error_message', model: f.object %>
        　<%= f.label :"目標" %><br>
          <%= f.text_field :title_task,autofocus: true, autocomplete: "title_task" ,class:"form-control" %><br>

          <%= f.label :"場所" %><br>
          <%= f.text_field :task_place,autocomplete: "task_place" ,class:"form-control" %><br>

          <%= f.label :"やりたい事" %><br>
          <%= f.text_area :content, rows: '5' ,class:"form-control"%><br>

          <%= f.label :start_time %>
          <%= f.date_field :start_time %>

          <%= f.label :end_time %>
          <%= f.date_field :end_time %>

          <%= f.select :status, Task.statuses.keys.map {|k| [I18n.t("enums.task.status.#{k}"), k]} %>

　　　　　<%= f.label :"画像" %>
          <%= f.file_field :task_image,accept: "image/*" %><br/>

          <%= f.submit "投稿" %>

    　　<% end %>
      <div class="col-md-3 ">
        <%= image_tag task.get_task_image,size: "150x150",class:"rounded-circle m-3 "%>
      </div>
      <div class="col-md-7 ">
        <div class="card-body m-3">
          <h5 class="card-title ">目標 : <%= task.title_task %></h5>
          <p class="card-text">場所 : <%= task.task_place %></p>
          <p class="card-text"><small class="text-muted">やりたい事 : <%= task.content %></small></p>
        </div>
      </div>
      <div class="col-md-2">
        <p class="text-center mt-4">
          <%= link_to edit_task_path(task.id) do %>
            <i class="fas fa-edit fa-2x m-2"></i>
          <% end %>
        </p>
        <p class="text-center mt-4">
          <%= link_to task_path(task.id),method: :delete,data: { confirm: '削除してよろしいですか?' } do%>
            <i class="fas fa-trash-alt fa-2x m-2"></i>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
   <%= paginate tasks, theme: 'bootstrap-5'%>