
<div class="container">
  <div class="row">
    <div class="col"><h4 class="text-center "><%= @schedule_day.schedule_day.strftime("%Y年 %m月 %d日") %></h4></div>
    <div class="col col-6"><h4 class="text-center text-c"><%= @schedule_day.task.title_task %></h4></div>
    <div class="col"><p class="text-center text-c"><%= @schedule_day.task.task_place %></p></div>
  </div>
  <div class="row">
    <div class="col">
      <%= render 'day_tasks/day_task_form',day_task: @day_task,schedule_day: @schedule_day %>
    </div>
    <div class="col">
      <div id="day_task_index">
        <%= render 'day_tasks/day_task_index',day_tasks: @day_tasks %>
      </div>
  </div>
</div>










