<div class="container ">
   <% @tasks.each do |task|%>
        <div class="row border border-3 m-3 shadow">
          <div class="col-md-4">
            <%= image_tag task.post_image.get_image ,size: "150x150",class:"rounded-circle"%>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= task.title_task %></h5>
              <p class="card-text"><%= task.task_place %></p>
              <p class="card-text"><small class="text-muted"><%= task.content %></small></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
      
