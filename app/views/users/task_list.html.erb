<div class="container  d-flex justify-content-center ">
   <% @tasks.each do |task|%>
        
        <div class="row g-0 border shadow-lg w-50 mt-3">
          <div class="col-4 ">
            <%= image_tag task.post_image.get_image ,size: "150x150",class:"rounded-circle m-3"%>
          </div>
          <div class="col-8 ">
            <div class="card-body m-3">
              <h5 class="card-title "><%= task.title_task %></h5>
              <p class="card-text"><%= task.task_place %></p>
              <p class="card-text"><small class="text-muted"><%= task.content %></small></p>
            </div>
          </div>
        </div>
      </div>
        <% end %>
      </div>
      
