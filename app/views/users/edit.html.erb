
<div class="container ">
  <div class="row">
    <div class="col d-flex justify-content-center">


<%= form_with model: @user,url: user_path(@user.id),method: :patch, local: true do |f| %>

  <div><h2>公開プロフィール</h2></div>

  <div class="field m-3">
    <%= f.label :ニックネーム %>
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname",placeholder: "ニックネーム",class:"form-control" %>
  </div>


  <div class="field m-3">
    <%= f.label :名前 %>
    <%= f.text_field :name, autocomplete: "name",placeholder: "名前",class:"form-control" %>
  </div>


  <div class="field m-3">
    <%= f.label :メールアドレス%>
    <%= f.email_field :email, autocomplete: "email",placeholder: "メールアドレス",class:"form-control" %>
  </div>


  <div class="field m-3">
    <%= f.file_field :profile_image,accept: "image/*" %>
  </div>

  <div class="actions d-flex justify-content-center">
    <%= f.submit "変更" ,class:"btn btn-primary rounded-pill"%>
  </div>


 <% end %>



    </div>
  </div>
</div>