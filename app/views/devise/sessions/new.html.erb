<div class="container">
  <div class="row">
    <div class="col d-flex justify-content-center">
      

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <h2>おかえりなさい！Landscapeへ</h2></div>
          <div class="field m-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "メールアドレス",class:"form-control" %>
          </div>
        
          <div class="field m-3">
            <%= f.password_field :password, autocomplete: "current-password",placeholder: "パスワード",class:"form-control" %>
          </div>
        
          <% if devise_mapping.rememberable? %>
            <div class="form-check">
              <%= f.check_box :remember_me%>
              <%= f.label :remember_me %>
            </div>
          <% end %>
        
          <div class="actions  d-flex justify-content-center">
            <%= f.submit "Log in",class:"btn btn-primary rounded-pill" %>
          </div>
          <div><%= render "devise/shared/links" %></div>
        <% end %>
        
        

    </div>
  </div>
</div>
