<%= link_to notifications_path do %>
  <% if unchecked_notifications.any? %>
    <span class=" fa-stack ">
      <i class="far fa-bell fa-2x fa-stack-1x"></i>
      <span class="fa-layers-counter fa-3x" style="background:Tomato"><%= current_user.passive_notifications.count %></span>
    </span>
    </span>
  <% else %>
      <i class="far fa-bell fa-2x"></i>
  <% end %>
<% end %>
